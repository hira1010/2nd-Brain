{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "DOM",
            "ES2022"
        ],
        "jsx": "react-jsx",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*",
        "remotion.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}